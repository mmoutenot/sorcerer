<p id="notice"><%= notice %></p>

<p>
  <strong>Topic:</strong>
  <%= @topic.name %>
</p>

<% @topic_sources.each do |topic_source| %>
  <p>
    "<%= topic_source.source.title %>",
    <%= topic_source.source.author %>
    (<%= topic_source.source.isbn %>)
    <div class="js-topic-source-vote" href="<%= upvote_topic_source_path(@topic, topic_source.source) %>">
      Votes:
      <div class="js-topic-source-vote-count">
        <%= topic_source.net_votes %>
      </div>
      ^
    </div>
  </p>
<% end %>

<%= link_to 'Edit', edit_topic_path(@topic) %> |
<%= link_to 'Back', topics_path %>
