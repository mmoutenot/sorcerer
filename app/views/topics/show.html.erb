<p id="notice"><%= notice %></p>

<p>
  <strong>Topic:</strong>
  <%= @topic.name %>
</p>

<% @topic_sources.each do |topic_source| %>
  <p>
    "<%= topic_source.source.title %>",
    <%= topic_source.source.author %>
    (<%= topic_source.source.isbn %>)
    Votes: <%= topic_source.net_votes %>
    <%= form_tag(upvote_topic_source_path(@topic, topic_source.source), :method => 'post') do %>
      <%= submit_tag '^' %>
    <% end %>
  </p>
<% end %>

<%= link_to 'Edit', edit_topic_path(@topic) %> |
<%= link_to 'Back', topics_path %>
